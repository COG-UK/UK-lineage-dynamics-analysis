{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 400,
  "height": 100,
    "data": {
        "url": "parameter-estimate-asymptomatic-ratio.json"
    },
    "encoding": {
        "y": {
            "field": "title",
            "type": "ordinal",
            "title": null
        },
        "color": {
            "value": "black"
        },
        "tooltip": [
            {
                "field": "pointEstimate"
            },
            {
                "field": "title"
            }
        ],
        "href": {
            "field": "doi",
            "type": "nominal"
        }
    },
    "layer": [
        {
            "mark": {
                "type": "point",
                "filled": true,
                "shape": "square",
                "size": 70
            },
            "encoding": {
                "x": {
                    "field": "pointEstimate",
                    "type": "quantitative",
                    "scale": {"domain": [0,100]},
                    "title": "Asymptomatic ratio (as a percentage)"
                }
            }
        } ,
        {
            "mark": {
                "type": "rule"
            },
            "encoding": {
                "x": {
                    "field": "lowerBound",
                    "type": "quantitative"
                },
                "x2": {
                    "field": "upperBound",
                    "type": "quantitative"
                }
          }
      }
  ]
}
